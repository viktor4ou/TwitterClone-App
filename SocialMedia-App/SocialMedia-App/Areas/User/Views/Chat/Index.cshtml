        <div class="col-12 col-md-9 d-flex flex-column">
            <div class="d-flex justify-content-between align-items-center p-3 border-bottom">
                <!-- Three-dot button for small screens -->
                <button class="btn btn-outline-secondary d-md-none" type="button" data-bs-toggle="collapse" data-bs-target="#chatList" aria-expanded="false" aria-controls="chatList">
                    <i class="bi bi-three-dots"></i>
                </button>

                <div id="selectedChatInfo" class="d-flex align-items-center">
