@model SocialMedia.Models.ViewModels.PostViewModel
<div>
    <!--Main Title-->
    <div class="container text-center post-card">
        <h1 class="main-title mb-2">Posts</h1>
        <div class="title-underline"></div>
    </div>
    <!-- Create post button -->
    <div class="container position-relative d-flex justify-content-end">
        <button type="button" class="btn btn-primary my-2 justify-content-center" data-bs-toggle="modal" data-bs-target="#exampleModal"><i class="bi bi-highlighter"></i> Create Post</button>
    </div>
    <!--Display all posts-->
    @foreach (var post in @Model.Posts)
    {
        <div class="container mt-2">
            <div class="post-card">
                <div class="post-header">
                    <div class="d-flex align-items-center">
                        <!--TODO:Change it to user info-->
                        <div class="profile-pic rounded-circle me-2">AN</div>
                        <div>
                            <h6 class="mb-0">Author name</h6>
                            <small class="text-muted">@post.TimeAgo</small>
                        </div>
                        <div class="dropdown me-2 ms-auto">
                            <!--Button for post manipulation-->
                            <button class="btn btn-sm " type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-three-dots"></i>
                            </button>
                            <!--Dropdown with all post manipulations-->
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <li><a class="dropdown-item" asp-action="DeletePost" asp-route-id="@post.Id">Delete</a></li>
                                <!--TODO:Add Edit post functionality-->
                                <li><a class="dropdown-item" asp-action="EditPost" asp-route-id="@post.Id" data-bs-toggle="modal" data-bs-target="#exampleModal">Edit</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="post-content">
                    <p>@post.Content</p>
                    @if (!string.IsNullOrEmpty(post.ImageURL))
                    {
                        <img src="@post.ImageURL" alt="Post Image" class="img-fluid" />
                    }
                </div>
                <div class="post-footer">
                    <div class="container">
                        <!--Like and comment buttons-->
                        <div class="container">
                            @post.Likes
                            <button class="btn btn-like me-3">
                                <i class="bi bi-hand-thumbs-up me-2"></i>Like
                                <!-- TODO: Create post request and handle it in the controller-->
                            </button>
                            <button class="btn btn-comment" data-bs-toggle="collapse" data-bs-target="#commentForm-@post.Id" aria-expanded="false" aria-controls="commentForm-@post.Id">
                                <i class="bi bi-chat"></i> Comment
                            </button>
                        </div>
                        <!--Comment form-->
                        <div class="collapse" id="commentForm-@post.Id">
                            <form method="post" action="/Home/CreateComment" class="mt-2">
                                <!--Returns the postId to the controller-->
                                <input type="hidden" name="postId" value="@post.Id" />
                                <div class="input-group mb-3">
                                    <input asp-for="@Model.Comment.Content" type="text" class="form-control" placeholder="Post your answer">
                                    <button class="btn btn-outline-info text-dark" type="submit"><i class="bi bi-send"></i></button>
                                </div>
                            </form>
                        </div>
                        @if (@Model.Comments.Any(i => i.PostId == @post.Id))
                        {
                            <!--Display all comments-->
                            @foreach (var comment in @Model.Comments.Where(c => c.PostId == @post.Id))
                            {
                                <div class="container mt-1">
                                    <div class="row rounded border p-2">
                                        <div class="col-md-3 d-flex align-items-center mb-2 mb-md-0">
                                            <div class="d-flex align-items-center">
                                                <div class="profile-pic rounded-circle me-2">AN</div>
                                                <h6 class="content-wrapper mb-0">Author Name</h6>
                                                <!--Dropdown for comment manipulations-->
                                                <div class="dropdown ms-auto">
                                                    <button class="btn btn-sm ms-2" style="margin-top: 4px" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                                        <i class="bi bi-three-dots"></i>
                                                    </button>
                                                    <!--Dropdown with comment manipulation options-->
                                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                        <li><a class="dropdown-item" asp-action="DeleteComment" asp-route-id="@comment.CommentId">Delete</a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 py-2 content-wrapper mb-2 mb-md-0">
                                            @comment.Content
                                        </div>
                                        <div class="col-md-3 d-flex align-items-center justify-content-md-end">
                                            <small class="text-wrap">@comment.TimeAgo</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Create Post Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create Post</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="CreatePost" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label asp-for="@Model.Post.Content">Description</label>
                        <input asp-for="@Model.Post.Content" type="text" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Post.ImageURL">Image</label>
                        <input type="file" name="file" class="form-control" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Create Post</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Edit Post Modal -->
<div class="modal fade" id="EditPost" tabindex="-1" aria-labelledby="EditPostLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="EditPostLabel">Edit Post</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="EditPost1" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label asp-for="@Model.Post.Content">Description</label>
                        <input asp-for="@Model.Post.Content" type="text" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Post.ImageURL">Image</label>
                        <input type="file" name="file" class="form-control" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Edit Post</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

