@model SocialMedia.Models.ViewModels.PostViewModel
<!-- Create Post Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label asp-for="@Model.Post.Content">Description</label>
                        <input asp-for="@Model.Post.Content" type="text" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Post.ImageURL">Image</label>
                        <input type="file" name="file" class="form-control" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Create Post</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

<div>
    <!--Main Title-->
    <div class="container text-center post-card">
        <h1 class="main-title mb-2">Posts</h1>
        <div class="title-underline"></div>
    </div>
    <!-- Create post button -->
    <div class="container position-relative d-flex justify-content-end">
        <button type="button" class="btn btn-primary my-2 justify-content-center" data-bs-toggle="modal" data-bs-target="#exampleModal"><i class="bi bi-highlighter"></i> Create Post</button>
    </div>
    @foreach (var post in @Model.Posts)
    {
        <div class="container mt-2">
            <div class="post-card">
                <div class="post-header">
                    <div class="d-flex align-items-center">
                        <div class="profile-pic rounded-circle me-2">AN</div>
                        <div>
                            <h6 class="mb-0">Author name</h6>
                            <small class="text-muted">@post.DatePosted.ToString("H:mm tt")</small>
                        </div>
                    </div>
                </div>
                <!-- TODO: Create delete post button-->
                <div class="post-content">
                    <p>@post.Content</p>
                    @if (!string.IsNullOrEmpty(post.ImageURL))
                    {
                        <img src="@post.ImageURL" alt="Post Image" class="img-fluid" />
                    }
                </div>
                <div class="post-footer d-flex justify-content-between align-items-center">
                    <div>
                        @post.Likes
                        <button class="btn btn-like me-3">
                            <i class="bi bi-hand-thumbs-up me-2"></i>Like
                            <!-- TODO: Create post request and handle it in the controller-->
                        </button>
                        <form method="post" action="/Home/CreateComment" class="d-inline">
                            <!--Returns the postId to the controller-->
                            <input type="hidden" name="postId" value="@post.Id" />
                            <div class="mb-3">
                                <label asp-for="@Model.Comment.Content">Description</label>
                                <input asp-for="@Model.Comment.Content" type="text" class="form-control" />
                            </div>
                            <button type="submit" class="btn btn-primary my-2 justify-content-center" data-bs-toggle="modal" data-bs-target="#CreateComment">
                                <i class="bi bi-highlighter">
                                </i> Comment
                            </button>
                        </form>
                        @if (@Model.Comments.Exists(i => i.PostId == @post.Id))
                        {
                            @foreach (var comment in @Model.Comments.Where(c => c.PostId == @post.Id))
                            {
                                <h6 class="mb-0">@comment.Content</h6>
                            }
                        }
                    </div>
                    <span class="post-date">@post.DatePosted.ToString("M/dd/yyyy")</span>
                </div>
            </div>
        </div>
    }


</div>
