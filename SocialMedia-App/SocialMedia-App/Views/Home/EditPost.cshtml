@model Post

<div class="modal fade" id="EditPost" tabindex="-1" aria-labelledby="EditPostLabel" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="EditPostLabel">Edit Post</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="@Model.ImageURL" />
                    <div class="mb-3">
                        <label asp-for="Content"></label>
                        <input asp-for="Content" type="text" class="form-control" />
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.ImageURL">Image</label>
                        <input type="file" name="file" class="form-control" />
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Edit Post</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded',
            function () {
                var editPostModal = new bootstrap.Modal(document.getElementById('EditPost'));
                editPostModal.show();
            });
    </script>
    <partial name="_ValidationScriptsPartial" />
}
